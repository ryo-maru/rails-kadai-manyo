<div class="container">
  <h2>Users</h2>


    <table class="table table-hover">
      <br>

    <thead>
    <tr>
      <th>ユーザーID</th>
      <th>ユーザー名</th>
      <th>管理者権限</th>
      <th>タスク数</th>
    </tr>
    </thead>

      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.name %></td>
          <td><%= user.admin %></td>
          <td>タスク数:<%= user.tasks.count %></td>
          <td>
          <%= link_to '詳細', admin_user_path(user), class: 'btn btn-primary' %>
          <%= link_to '編集', edit_admin_user_path(user.id),class: 'btn btn-info' %>
          <%= link_to '削除', admin_user_path(user), class: 'btn btn-warning', method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>

