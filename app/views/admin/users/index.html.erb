<div class="container">
  <h2>Users</h2>

  <div class="users">


    <table class="table table-hover">
      <% @users.each do |user| %>
        <tr>
          <td><%= link_to user.name, user_path(user.id) %></td>
          <td>タスク数:<%= user.tasks.count %></td>
          <td>
          <%= link_to '詳細', user_path(user.id), class: 'btn btn-primary' %>
          <%= link_to '編集', edit_admin_user_path(user.id),class: 'btn btn-info' %>
          <%= link_to '削除', admin_user_path(user), class: 'btn btn-warning', method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
<%= link_to '新規ユーザー登録', new_admin_user_path %>
